# تكوين التطبيق
APP_NAME="نظام نور للاختبارات"
APP_ENV="production"
APP_DEBUG=false
APP_URL="https://your-domain.com"
APP_PORT=3000

# قاعدة البيانات
DATABASE_URL="postgresql://user:password@localhost:5432/noor_db"
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=noor_db
DB_USERNAME=your_username
DB_PASSWORD=your_password

# المصادقة
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-long-random-secret-key"
JWT_SECRET="another-long-random-secret-key"
JWT_EXPIRATION=86400

# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# Redis للتخزين المؤقت
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null

# البريد الإلكتروني
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# خدمة الرسائل النصية
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=your_phone_number

# التخزين
STORAGE_DRIVER=local
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=your_bucket_name

# المراقبة
SENTRY_DSN=your_sentry_dsn